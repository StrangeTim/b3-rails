<!DOCTYPE html>
<html>
<head>
  <title>B3 Gallery</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= flash[:alert] %>
  <div class ="flash-wrapper">
    <%= flash[:notice] %>
  </div>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span>
        <%= link_to "- Home -", '/', class: "navbar-brand"  %>
        <%= link_to 'Local Artists -', artists_path, class: "navbar-brand" %>
        <%= link_to 'About -', '/about', class: "navbar-brand" %>
      </span>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">

      <ul class="nav navbar-nav navbar-right special-color">

          <li class="dropdown">
            <% if user_signed_in? %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <%= current_user.username %> <span class="caret"></span>
            </a>
            <% end %>
          <ul class="dropdown-menu">
            <% if user_signed_in? %>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              <li><%= link_to "Password", edit_user_registration_path %></li>
            <% end %>
          </ul>
        </li>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="row">
    <%= yield %>
    <div id="modal-holder"></div>
  </div>

  <div class="push"></div>


  <div class="navbar navbar-default navbar-xs navbar-fixed-bottom">
    <span style="text-align:center"> All Content Copyright (c) 2015</span>
  </div>

</body>
</html>
